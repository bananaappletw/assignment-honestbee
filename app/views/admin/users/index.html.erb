<h1>Users</h1>
<%= link_to 'New User', new_admin_user_path, class: "ui positive button" %>
<div class="ui items">
  <table class="ui table">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do | user, i | %>
        <tr>
          <td>
            <%= i+1 %>
          </td>
          <td><%= link_to user.email, admin_user_path(user)  %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(user), class: 'ui button' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
