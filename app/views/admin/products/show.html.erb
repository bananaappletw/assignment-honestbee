<h1 class="ui header">Product</h1>
<h2 class="ui header">
  <i class="archive icon"></i>
  Name: <%= @product.name %>
</h2>
<h3 class="ui header">
  <i class="dollar sign icon"></i>
  Price: <%= @product.price %>
</h3>
<h3 class="ui header">
  <i class="dollar sign icon"></i>
  Premium Price: <%= @product.premium_price %>
</h3>
<% if @product.images.attached? %>
  <div class="ui images">
    <% @product.images.each_with_index do |image, i| %>
      <%= image_tag image.variant(combine_options: { resize: "100x100", auto_orient: true }), class: "ui image"%>
    <% end %>
  </div>
<% end %>
<%= link_to 'Back', admin_products_path, class: "ui button"  %>
