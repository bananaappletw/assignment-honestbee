<h1>Products</h1>
<% @products.each do |product| %>
  <div class="ui segment">
    <h2><%= product.price %></h2>
    <h2><%= product.name %></h2>
    <% if product.images.attached? %>
      <p>
        <h2>Images</h2>
        <% product.images.each_with_index do |image, i| %>
          <p>
            <%= image_tag image %>
          </p>
        <% end %>
      </p>
    <% end %>
    <%= link_to 'Show', admin_product_path(product), class: "ui button" %>
    <%= link_to 'Edit', edit_admin_product_path(product), class: "ui button" %>
    <%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: "ui button" %>
  </div>
<% end %>
<%= link_to 'New Product', new_admin_product_path, class: "ui button" %>
