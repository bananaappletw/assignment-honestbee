<h1 class="ui header">Product</h1>
<h2 class="ui header">
  <i class="archive icon"></i>
  Name: <%= @product.name %>
</h2>
<h3 class="ui header">
  <i class="dollar sign icon"></i>
  Price: <%= @product.price %>
</h3>
<% if current_user&.has_role?(:premium) %>
  <h3 class="ui header">
    <i class="dollar sign icon"></i>
    Premium Price: <%= @product.premium_price %>
  </h3>
<% end %>
<% if @product.images.attached? %>
  <div class="ui images">
    <% @product.images.each do |image| %>
      <%= image_tag rails_representation_url(image.variant(resize: "100x100")), class: "ui image" %>
    <% end %>
  </div>
<% end %>
<%= link_to 'Back', products_path, class: "ui button" %>
