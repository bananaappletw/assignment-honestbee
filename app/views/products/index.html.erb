<h1 class="ui header">Products</h1>
<% @products.each do |product| %>
  <div class="ui segment">
    <h2 class="ui header">
      <i class="archive icon"></i>
      Name: <%= product.name %>
    </h2>
    <h3 class="ui header">
      <i class="dollar sign icon"></i>
      Price: <%= product.price %>
    </h3>
    <% if current_user&.has_role?(:premium) %>
      <h3 class="ui header">
        <i class="dollar sign icon"></i>
        Premium Price: <%= product.premium_price %>
      </h3>
    <% end %>
    <% if product.images.attached? %>
      <div class="ui images">
        <% product.images.each_with_index do |image| %>
          <%= image_tag image.variant(combine_options: { resize: "100x100", auto_orient: true }), class: "ui image" %>
        <% end %>
      </div>
    <% end %>
    <%= link_to 'Show', product, class: "ui button" %>
  </div>
<% end %>
